            <Button Background="Beige" Grid.Row="1" Grid.Column="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="21" Click="CellClick" x:Name="CellD2" />

            <Button Background="Beige" Grid.Row="2" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="21" Click="CellClick" x:Name="CellA3" />
